  <div class="card">
    <img src="https://upload.wikimedia.org/wikipedia/commons/6/6f/Fiesta_icon.png" alt="Fiesta México" class="logo" />
    <h1>CUMPLEAÑOS <span>TOTOPO</span></h1><form id="rsvp-form">
  <input id="name" type="text" placeholder="Nombre" required />
  <button type="submit">Reservar</button>
</form>

<h2>Lista de asistentes</h2>
<ul id="list"></ul>
<div class="total">Total: <span id="total">0</span></div>

  </div>  <script>
    const LS_KEY = 'cumple-totopo:list';
    const form = document.getElementById('rsvp-form');
    const input = document.getElementById('name');
    const listEl = document.getElementById('list');
    const totalEl = document.getElementById('total');

    function getList(){
      try{ return JSON.parse(localStorage.getItem(LS_KEY))||[] }catch{return[]}
    }
    function saveList(list){
      localStorage.setItem(LS_KEY, JSON.stringify(list));
    }
    function render(){
      const list=getList();
      listEl.innerHTML='';
      list.forEach(n=>{
        const li=document.createElement('li');
        li.textContent=n;
        listEl.appendChild(li);
      });
      totalEl.textContent=list.length;
    }

    form.addEventListener('submit',e=>{
      e.preventDefault();
      const name=input.value.trim();
      if(!name)return;
      const list=getList();
      if(!list.includes(name)){
        list.push(name);
        saveList(list);
        render();
      }
      input.value='';
    });

    render();
  </script></body>
